<?php

/**
 * @file
 * Contains jwt_auth_consumer.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function jwt_firebase_auth_consumer_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the jwt_auth_consumer module.
    case 'help.page.jwt_firebase_auth_consumer':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Authenticates JWTs generated by Firebase auth. Also exposes an endpoint to allow users to create drupal users for firebase users or set/create a default user for firebase.') . '</p>';
      return $output;
  }
}
